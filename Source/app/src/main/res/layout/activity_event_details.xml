<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventdetails_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/eventdetails_margins">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Event"
                android:id="@+id/eventdetails_eventtitle"
                android:layout_alignParentLeft="true"
                android:textColor="@color/transparent_black"
                android:textSize="@dimen/eventdetails_titlesize"
                android:maxLines="3" />

            <ImageButton
                android:layout_width="@dimen/eventdetails_titlesize"
                android:layout_height="@dimen/eventdetails_titlesize"
                android:id="@+id/eventdetails_attendbutton"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_plus" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="256 people attending"
                android:id="@+id/eventdetails_peopleattendinglabel"
                android:textColor="@color/transparent_black" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@color/transparent_black"
            android:id="@+id/eventdetails_borderline"
            android:layout_marginTop="@dimen/eventdetails_section_topandbottommargin"></GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="@dimen/eventdetails_section_topandbottommargin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventdetails_addresscontainer"
                android:layout_weight="0.65">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/placeholder_address"
                    android:id="@+id/eventdetails_addresslabel"
                    android:textColor="@color/transparent_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="8214 Shadow Wood blvd"
                    android:id="@+id/eventdetails_addressstreet1"
                    android:textColor="@color/transparent_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Apt. 8214"
                    android:id="@+id/eventdetails_addressstreet2"
                    android:textColor="@color/transparent_black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Coral Springs"
                        android:id="@+id/eventdetails_addresscity"
                        android:textColor="@color/transparent_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/address_city_state_separator"
                        android:id="@+id/eventdetails_addresscitystateseparator"
                        android:textColor="@color/transparent_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="FL"
                        android:id="@+id/eventdetails_addressstate"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/transparent_black" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="33071"
                    android:id="@+id/eventdetails_addresspostalcode"
                    android:textColor="@color/transparent_black" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/eventdetails_websitecontainer"
                android:layout_alignParentRight="true"
                android:layout_weight="0.35">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_details_visitwebsite"
                    android:id="@+id/eventdetails_visitwebsite"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="@dimen/eventdetails_section_topandbottommargin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/placeholder_details_starttime"
                    android:id="@+id/eventdetails_starttimelabel"
                    android:textColor="@color/transparent_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="December 8th, 2014"
                    android:id="@+id/eventdetails_startdate"
                    android:textColor="@color/transparent_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="9:23pm"
                    android:id="@+id/eventdetails_starttime"
                    android:textColor="@color/transparent_black" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/placeholder_details_category"
                    android:id="@+id/eventdetails_categorylabel"
                    android:textColor="@color/transparent_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sports"
                    android:id="@+id/eventdetails_category"
                    android:textColor="@color/transparent_black" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="@dimen/eventdetails_section_topandbottommargin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/placeholder_details_description"
                android:id="@+id/eventdetails_descriptionlabel"
                android:textColor="@color/transparent_black" />

            <ScrollView android:layout_height="@dimen/eventdetails_max_desc_size"
                android:layout_width="fill_parent">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="This is where a \n really long description will go"
                    android:id="@+id/eventdetails_description"
                    android:textColor="@color/transparent_black"
                    />
            </ScrollView>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigate_button"
            android:id="@+id/eventdetails_navigate"
            android:padding="@dimen/eventdetails_navigate_button_padding" />

    </LinearLayout>

</RelativeLayout>
