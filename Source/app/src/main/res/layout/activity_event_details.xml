<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group2.whatsup.EventDetails"
    android:background="#444"
    android:id="@+id/relative_event_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Title"
        android:id="@+id/eventTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="People attending:  "
        android:id="@+id/attendeesHead"
        android:layout_below="@+id/eventTitle"
        android:layout_alignStart="@+id/eventTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Amount Attendees"
        android:id="@+id/amountAttendees"
        android:layout_below="@+id/eventTitle"
        android:layout_toRightOf="@+id/attendeesHead" />


    <!-- Address -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/addressHead"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amountAttendees" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="stl1"
        android:id="@+id/stl1"
        android:layout_below="@+id/addressHead"
        android:layout_alignStart="@+id/addressHead" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="stl2"
        android:id="@+id/stl2"
        android:layout_below="@+id/stl1"
        android:layout_alignStart="@+id/addressHead" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="city"
        android:id="@+id/city"
        android:layout_below="@+id/stl2"
        android:layout_alignStart="@+id/addressHead" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="state"
        android:id="@+id/state"
        android:layout_toRightOf="@+id/city"
        android:layout_alignTop="@+id/city" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="zip"
        android:id="@+id/zip"
        android:layout_toRightOf="@+id/state"
        android:layout_alignTop="@+id/city" />
    <!-- End of Address -->

    <!-- Website -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Web Site"
        android:id="@+id/websiteHead"
        android:layout_alignTop="@+id/addressHead"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Go to web"
        android:id="@+id/website"
        android:layout_below="@+id/websiteHead"
        android:layout_alignEnd="@+id/websiteHead" />
    <!-- End Website -->

    <!-- Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/timeHead"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/zip"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HHAM"
        android:id="@+id/time"
        android:layout_below="@+id/timeHead"
        android:layout_alignLeft="@+id/timeHead" />

    <!-- End Time -->

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/descriptionHead"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No Description"
        android:id="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionHead"
        android:layout_alignLeft="@+id/eventdetails_navigateto" />
    <!-- End of description -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/eventdetails_buttoncontainer">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join event"
            android:id="@+id/eventdetails_joinevent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/eventdetails_button_margin"
            android:layout_marginRight="@dimen/eventdetails_button_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:id="@+id/eventdetails_navigateto"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/eventdetails_button_margin"
            android:layout_marginRight="@dimen/eventdetails_button_margin" />
    </LinearLayout>


</RelativeLayout>
